{
  "name": "didit-protocol",
  "version": "0.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "watch": "turbo run watch --concurrency=50 --continue",
    "test": "turbo run test --cache-dir=.turbo",
    "typecheck": "turbo run typecheck --cache-dir=.turbo",
    "lint": "turbo run lint --cache-dir=.turbo",
    "prettier": "prettier --check .",
    "prettier:format": "prettier --write .",
    "build:clean": "turbo run build:clean",
    "clean": "rm -rf `find . -type d -name node_modules -o -name dist -o -name .next -o -name out`; rm pnpm-lock.yaml",
    "changeset:pre": "changeset pre enter",
    "changeset:pre:exit": "changeset pre exit",
    "changeset:add": "changeset",
    "changeset:v": "changeset; changeset version",
    "publish:latest": "changeset publish",
    "publish:alpha": "pnpm install; turbo run build lint test; changeset publish --tag alpha",
    "publish:beta": "pnpm install; turbo run build lint test; changeset publish --tag beta",
    "publish:test": "pnpm install; turbo run build lint test; changeset publish --tag test",
    "postinstall": "manypkg check",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "workspaces": [
    "packages/eslint-config",
    "packages/tsconfig",
    "packages/core",
    "apps/*",
    "examples/*"
  ],
  "keywords": [
    "didit",
    "web3",
    "crypto",
    "siwe",
    "walletconnect",
    "gamium",
    "ethereum"
  ],
  "author": "Didit <didit.me>",
  "license": "ISC",
  "homepage": "TODO: didit new repo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diditme/didit.git"
  },
  "bugs": {
    "url": "git+https://github.com/diditme/didit/issues"
  },
  "packageManager": "pnpm@8.15.8",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.27.4",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@didit-protocol/eslint-config": "workspace:*",
    "@didit-protocol/tsconfig": "workspace:*",
    "@manypkg/cli": "^0.21.4",
    "@types/node": "^20.14.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "inquirer": "9",
    "prettier": "3.1.1",
    "turbo": "1.13.3",
    "typescript": "5.3.3",
    "vitest": "1.6.0"
  },
  "volta": {
    "node": "20.14.0",
    "pnpm": "8.15.8"
  }
}
